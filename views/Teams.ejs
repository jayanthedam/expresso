<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="/stylesheets/teams.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>UiPath Ace Blogs Team</title>
    <link rel="shortcut icon" type="image/x-icon" href="https://images.ctfassets.net/5965pury2lcm/4425FsZbwrsJdhttHkPlTE/61068f00208417f2017bce78bf2114b4/favicon-32x32.png" />
  </head>

  <body>
    <nav
      class="navbar navbar-expand-lg navbar-light sticky-top glass"
      style="background-color: #ffffff"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            id="logo_img"
            src="../images/UiPath logo.png"
            alt="UiPath Ace Blogs Logo"
          />

          <!-- <span class="logo_text">Ace Blogs</span> -->
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <img src="../images/menu.png" alt="Menu" width="24" height="24" />
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="Blogs"
                >Blogs</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="Gallery"
                >Gallery</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="Teams"
                >Team</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid teams">
        <% teams.forEach(function(team) { %>
          <div class="<%= team.class %>" style="margin: 30px; color: #ff6900;">
            <h1 class="text-center" style="font-size: 2.3rem; font-weight: bold; margin-bottom: 25px; margin-top: 25px;">
              <%= team.role %>
            </h1>
      
            <div class="section">
              <% team.members.forEach(function(member) { %>
                <div class="member">
                  <div class="main">
                    <div class="img">
                      <img class="member-img" src="<%= member.pic %>" alt="<%= member.name %>">
                    </div>
                    <div class="details">
                      <h1 class="detail name"><%= member.name %></h1>
                      <% if (member.role) { %>
                        <h1 class="detail role Role" style="font-size: 1rem; font-weight: 400;"><%= member.role %></h1>
                      <% } %>
                      <h2 class="detail id">
                        <i class="fab fa-linkedin fa-s" style="color: #1DA1F2;"></i>
                        <a href="<%= member.Id %>" target="_blank" style="margin: 5px;">LinkedIn Id</a>
                      </h2>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% }) %>
      </div>

    <script src="script.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>